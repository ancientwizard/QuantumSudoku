{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "tests/**/*"],
  "compilerOptions": {
//  "target": "ES6",
    "target": "ES2020",
    "module": "CommonJS",
    "preserveValueImports": false,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}

